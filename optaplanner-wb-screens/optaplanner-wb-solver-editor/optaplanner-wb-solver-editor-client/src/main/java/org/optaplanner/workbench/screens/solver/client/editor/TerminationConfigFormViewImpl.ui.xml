<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:with field="i18n" type="org.optaplanner.workbench.screens.solver.client.resources.i18n.SolverEditorConstants"/>

  <ui:style>
    .gwt-Tree {
      border-top: 1px solid #e5e5e5;
      border-bottom: 1px solid #e5e5e5;
      border-right: 1px solid #e5e5e5;
    }

    .gwt-Tree table {
      width: 100%;
      padding: 3px 3px 3px 0px;
      border-collapse: separate;
    }

    .gwt-Tree td:first-child {
      width: 23px;
    }
    .gwt-Tree td:first-child + td {
      border-bottom: 1px solid #e5e5e5;
    }
  </ui:style>

  <bootstrap:Container fluid="true">

    <bootstrap:Legend text='{i18n.Termination}'/>

    <gwt:Tree ui:field="tree" addStyleNames='{style.gwt-Tree}' />

    <bootstrap:Label ui:field="emptyTreeLabel" text="{i18n.EmptyTreeLabelText}"/>

  </bootstrap:Container>

</ui:UiBinder>