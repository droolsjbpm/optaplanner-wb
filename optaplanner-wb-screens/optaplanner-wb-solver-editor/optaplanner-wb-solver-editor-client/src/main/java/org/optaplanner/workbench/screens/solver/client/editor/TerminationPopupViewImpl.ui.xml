<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:widgets='urn:import:org.optaplanner.workbench.screens.solver.client.editor'
             xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui">

    <ui:with field="i18n" type="org.optaplanner.workbench.screens.solver.client.resources.i18n.SolverEditorConstants"/>

    <ui:style>

        .spacer {
            margin-left: 5px;
        }

    </ui:style>

    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_12">
                <b:Form type="HORIZONTAL">

                    <b:FormGroup>
                        <b:FormLabel ui:field="terminationTypeLabel" text="Termination type" showRequiredIndicator="true" addStyleNames="col-md-2"/>
                        <b:Column size="MD_10">
                            <select:Select ui:field="terminationList" />
                        </b:Column>
                    </b:FormGroup>

                    <b:FormGroup>
                        <b:FormLabel ui:field="terminationValueLabel" text="Termination value" addStyleNames="col-md-2" showRequiredIndicator="true"/>
                        <b:Column size="MD_10">
                            <b:TextBox ui:field="textTerminationValueInput" />
                            <b:ListBox ui:field="listTerminationValueInput" />
                            <widgets:Spinner ui:field="numericTerminationValueInput" />
                        </b:Column>
                    </b:FormGroup>

                    <b:FormGroup>
                        <b:Column size="MD_12">
                            <b:Alert ui:field="alert" type="DANGER" visible="false"/>
                        </b:Column>
                    </b:FormGroup>

                    <b:FormGroup>
                        <b:Column size="MD_12">
                            <b:Button ui:field="createAndContinueButton" type="PRIMARY" text="{i18n.CreateTerminationAndContinue}" pull="RIGHT" addStyleNames="{style.spacer}"/>
                            <b:Button ui:field="createButton" type="PRIMARY" text="{i18n.CreateTermination}" pull="RIGHT" addStyleNames="{style.spacer}"/>
                            <b:Button ui:field="cancelButton" text="{i18n.Cancel}" pull="RIGHT"/>
                        </b:Column>
                    </b:FormGroup>
                </b:Form>
            </b:Column>
        </b:Row>

    </b:Container>

</ui:UiBinder>

